<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      android:animateLayoutChanges="true"
      >

    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:id="@+id/ratingBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:fillColor="@color/material_red300"
        app:borderColor="@color/material_red500"
        app:pressedFillColor="@color/material_redA200"
        app:pressedBorderColor="@color/material_redA400"
        app:stepSize="0.25"
        app:gravity="left"
        />

    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:fillColor="@color/material_blue300"
        app:borderColor="@color/material_blue500"
        app:pressedFillColor="@color/material_blueA200"
        app:pressedBorderColor="@color/material_blueA400"
        app:stepSize="0.5"
        app:gravity="left"
        />

    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:id="@+id/ratingBar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:fillColor="@color/material_green300"
        app:borderColor="@color/material_green500"
        app:pressedFillColor="@color/material_greenA700"
        app:pressedBorderColor="@color/material_green700"
        app:stepSize="0.75"
        app:gravity="left"
        />

    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:id="@+id/ratingBar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:fillColor="@color/material_amber300"
        app:borderColor="@color/material_amber500"
        app:pressedFillColor="@color/material_amberA400"
        app:pressedBorderColor="@color/material_amberA700"
        app:stepSize="1"
        app:gravity="right"
        />

    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:id="@+id/ratingBar5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:fillColor="@color/material_purple300"
        app:borderColor="@color/material_purple500"
        app:pressedFillColor="@color/material_purpleA200"
        app:pressedBorderColor="@color/material_purpleA400"
        app:stepSize="1.25"
        app:gravity="right"
        />

  </LinearLayout>

</ScrollView>